#include <iostream>
#include <string>
#include <cctype>
using namespace std;

bool esVocal(char c){
    c = tolower(c);
    return c=='a'||c=='e'||c=='i'||c=='o'||c=='u';
}

int main(){
    string s;
    getline(cin, s);

    int cantidad = 0;

    for(int i=0; i+1<s.size(); i++){
        if(esVocal(s[i]) && esVocal(s[i+1]))
            cantidad++;
    }

    cout << cantidad;
    return 0;
}
