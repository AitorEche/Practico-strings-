#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main(){
    string s;
    getline(cin, s);

    bool inicio = true;

    for(int i=0; i<s.size(); i++){
        if(!isspace(s[i]) && inicio){
            s[i] = toupper(s[i]);
            inicio = false;
        }
        else if(isspace(s[i])){
            inicio = true;
        }
    }

    cout << s;
    return 0;
}
