#include <iostream>
#include <string>
using namespace std;

int main(){
    int n;
    cin >> n;
    cin.ignore();

    string out = "", linea;

    for(int i=0; i<n; i++){
        getline(cin, linea);
        if(i > 0) out += " ";
        out += linea;
    }

    // MayÃºscula inicial y punto final
    if(out.size() > 0){
        out[0] = toupper(out[0]);
        if(out.back() != '.') out += ".";
    }

    cout << out;
    return 0;
}
